{
  "include": [ "src/**/*.ts" ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "sourceMap": true,

    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",

    "noImplicitReturns": true,
    "strict": true,
    "useDefineForClassFields": true
  }
}
